<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_3sdp"
    android:layout_marginTop="@dimen/_5sdp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/mAvatar"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_3sdp"
        android:src="@drawable/ic_avatar_default"
        app:layout_constraintBottom_toBottomOf="@id/mLnChat"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:text="Helloooooo"
        android:textColor="@color/colorGray"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintLeft_toRightOf="@id/mAvatar"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/mLnChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="@dimen/_200sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@drawable/bg_message_friend"
        android:orientation="horizontal"
        app:layout_constraintLeft_toRightOf="@+id/mAvatar"
        app:layout_constraintTop_toTopOf="@id/txtName">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txtMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_3sdp"
            android:maxWidth="@dimen/_200sdp"
            android:text="njjhfgjkhfdjkhgjkfhdgjkhdfkjghjk"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>