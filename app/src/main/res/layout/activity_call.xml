<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <org.webrtc.SurfaceViewRenderer
        android:id="@+id/mRemoteVideoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <org.webrtc.SurfaceViewRenderer
        android:id="@+id/mLocalVideoView"
        android:layout_margin="@dimen/_10sdp"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_150sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/mBtnEnd"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_30sdp"
        android:text="End"
        app:layout_constraintLeft_toRightOf="@id/mBtnAccept"
        app:layout_constraintBottom_toBottomOf="@id/mBtnAccept"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/mBtnCall"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_30sdp"
        android:text="Call"
        app:layout_constraintRight_toLeftOf="@+id/mBtnAccept"
        app:layout_constraintBottom_toBottomOf="@+id/mBtnAccept"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/mBtnAccept"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_30sdp"
        android:text="Accept"
        android:layout_marginBottom="@dimen/_20sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/mtvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="Status"
        android:textColor="#FF5458"
        app:layout_constraintBottom_toTopOf="@+id/mBtnAccept"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/mEditRoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF5458"
        app:layout_constraintBottom_toTopOf="@+id/mtvStatus"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</android.support.constraint.ConstraintLayout>