<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="@dimen/_250sdp"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_20sdp"
        android:orientation="vertical">
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGreen"
            android:textStyle="bold"
            android:text="Edit Profile"
            android:layout_marginBottom="@dimen/_5sdp"
            android:textSize="@dimen/_16ssp"
            android:gravity="center"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/mImgAvatar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_90sdp"
            android:src="@drawable/ic_avatar_default" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp">
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hint_firstname"/>
            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/mEdtFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Nguyen"
                android:maxLines="1"
                android:singleLine="true" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp">
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hint_lastname"/>
            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/mEdtLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Nhi"
                android:singleLine="true"
                android:maxLines="1"/>

        </LinearLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/colorGreen"
            android:layout_marginTop="@dimen/_20sdp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lnContactFriend"
            android:visibility="visible"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:id="@+id/mBtnCancel"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textColor="@color/colorGreen"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:background="@color/colorGreen"/>


            <android.support.v7.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:textAllCaps="false"
                android:id="@+id/mBtnSave"
                android:text="Save"
                android:textColor="@color/colorGreen"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>