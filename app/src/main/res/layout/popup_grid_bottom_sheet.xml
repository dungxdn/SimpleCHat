<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/_24sdp"
    android:paddingTop="@dimen/_24sdp"
    android:weightSum="9">

    <TextView
        android:id="@+id/popUpCopy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_24sdp"
        android:layout_weight="3"
        android:drawableTop="@drawable/ic_content_copy"
        android:text="@string/popupcopy"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/popUpShare"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_24sdp"
        android:layout_weight="3"
        android:drawableTop="@drawable/ic_share"
        android:text="@string/popupshare"
        android:textAlignment="center"
        app:layout_constraintLeft_toRightOf="@+id/popUpCopy" />

    <TextView
        android:id="@+id/popUpDelete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_24sdp"
        android:layout_weight="3"
        android:drawableTop="@drawable/ic_delete_black_24dp"
        android:text="@string/popupdelete"
        android:textAlignment="center" />
</LinearLayout>

