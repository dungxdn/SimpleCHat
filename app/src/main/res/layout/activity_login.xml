<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgv_logo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_195sdp"
            android:layout_marginTop="0dp"
            android:adjustViewBounds="false"
            android:scaleType="fitCenter"
            android:src="@drawable/logo"
            android:background="@color/white"/>

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/indicatorView"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            style="@style/AVLoadingIndicatorView"
            android:visibility="invisible"
            app:indicatorName="PacmanIndicator"
            app:indicatorColor="@color/yellow"
            android:layout_gravity="center"
            />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/design_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_marginRight="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/black"
                android:hint="@string/hint_email"
                android:textSize="@dimen/_20ssp"
                android:inputType="textEmailAddress" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/design_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <EditText
                android:id="@+id/edtPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_marginRight="@dimen/_25sdp"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/black"
                android:hint="@string/hint_pass"
                android:textSize="@dimen/_20ssp"
                android:inputType="textPassword" />

        </android.support.design.widget.TextInputLayout>


        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:text="@string/text_login"
            android:textAllCaps="false"
            android:textColor="@color/grey"
            android:textSize="@dimen/_20ssp"
            android:background="@drawable/shape_button_login"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/txt_sign_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/black"
                android:hint="@string/text_not_account"
                android:textSize="@dimen/_15ssp"
                />
            <Button
                android:id="@+id/btnSignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="@string/text_sign_up"
                android:textColor="@color/blue"
                android:textSize="@dimen/_15ssp"
                android:textAllCaps="false"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_25sdp">

            <TextView
                android:id="@+id/txt_forgot_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/black"
                android:hint="@string/text_forgot_password"
                android:textSize="@dimen/_15ssp"
                />

            <Button
                android:id="@+id/btnRecover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="@string/text_recover"
                android:textColor="@color/blue"
                android:textSize="@dimen/_15ssp"
                android:textAllCaps="false"

                />
        </LinearLayout>
    </LinearLayout>


</android.support.v4.widget.NestedScrollView>