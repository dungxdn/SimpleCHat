<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activities.SignUpActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgAvatar"
        android:layout_width="match_parent"
        android:layout_height="199dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/_20sdp"
        app:civ_border_width="@dimen/_2sdp"
        app:civ_border_color="@color/black"
        android:src="@drawable/img_avatar" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/design_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgAvatar"
        android:layout_marginTop="@dimen/_5sdp"
        >
        <EditText
            android:id="@+id/edtRegisterUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:padding="@dimen/_10sdp"
            android:textColor="@color/black"
            android:hint="@string/hint_email"
            android:textSize="@dimen/_15ssp"
            android:inputType="textEmailAddress" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/design_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_below="@+id/design_email">

        <EditText
            android:id="@+id/edtRegisterPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_25sdp"
            android:padding="@dimen/_10sdp"
            android:textColor="@color/black"
            android:hint="@string/hint_pass"
            android:textSize="@dimen/_15ssp"
            android:inputType="textPassword" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/design_firstname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_below="@+id/design_password"
        >
        <EditText
            android:id="@+id/edtRegisterFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:padding="@dimen/_10sdp"
            android:textColor="@color/black"
            android:hint="@string/hinh_first_name"
            android:textSize="@dimen/_15ssp"
            android:inputType="textEmailAddress" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/design_firstname"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_marginRight="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:text="@string/text_create_accout"
        android:textAllCaps="false"
        android:textColor="@color/grey"
        android:textSize="@dimen/_20ssp"
        android:background="@drawable/shape_button_login"
        />

    <LinearLayout
        android:id="@+id/linear_signup"
        android:layout_below="@+id/btnSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:textColor="@color/black"
            android:hint="@string/text_a_member"
            android:textSize="@dimen/_15ssp"
            />
        <Button
            android:id="@+id/btnSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="@string/text_sign_in"
            android:textColor="@color/blue"
            android:textSize="@dimen/_15ssp"
            android:textAllCaps="false"
            />
    </LinearLayout>

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/indicatorView"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        style="@style/AVLoadingIndicatorView"
        android:visibility="invisible"
        app:indicatorName="PacmanIndicator"
        app:indicatorColor="@color/yellow"
        android:layout_below="@+id/imgAvatar"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>