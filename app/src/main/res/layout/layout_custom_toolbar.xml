<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="@dimen/_8sdp"
        android:background="@color/colorGreen">

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/mImgButtonSetting"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:visibility="gone"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/ic_settings" />
        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/mImgButtonAddGroup"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:background="@android:color/transparent"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/ic_group_add" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/mTvTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/mImgButtonBack"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/_16ssp" />


        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/mImgButtonBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:background="@android:color/transparent"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/ic_arrow_back" />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/mImgButtonCall"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toStartOf="@+id/mImgButtonCallVideo"
            android:background="@android:color/transparent"
            android:padding="@dimen/_8sdp"
            android:visibility="gone"
            android:src="@drawable/ic_call_white" />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/mImgButtonCallVideo"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="match_parent"
            android:layout_toStartOf="@+id/mImgButtonSetting"
            android:background="@android:color/transparent"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/ic_videocall_white" />



    </RelativeLayout>



</LinearLayout>
