<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorGreen"
        android:elevation="@dimen/_8sdp">

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/mImgButtonSetting"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/ic_settings"
            android:visibility="visible" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/mButtonSharing"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:padding="@dimen/_8sdp"
            android:text="@string/action_share"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"
            android:visibility="gone"

            />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/mImgButtonAddGroup"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/ic_group_add"
            android:visibility="gone" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/mTvTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/mImgButtonBack"
            android:gravity="center_vertical"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/_16ssp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/mTvCreateNews"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/_5sdp"
            android:gravity="center_vertical"
            android:text="@string/title_tab_add_news"
            android:textColor="@color/white"
            android:textSize="@dimen/_16ssp"
            android:visibility="gone" />


        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/mImgButtonBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:background="@android:color/transparent"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/ic_arrow_back" />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/mImgButtonCall"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toStartOf="@+id/mImgButtonCallVideo"
            android:background="@android:color/transparent"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/ic_call_white"
            android:visibility="gone" />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/mImgButtonCallVideo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toStartOf="@+id/mImgButtonSetting"
            android:background="@android:color/transparent"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/ic_videocall_white"
            android:visibility="gone" />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/mImgButtonSearch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@android:color/transparent"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/ic_search"
            android:visibility="gone" />

        <android.support.v7.widget.SearchView
            android:id="@+id/mSearchView"
            app:iconifiedByDefault="false"
            app:searchIcon="@null"
            android:visibility="gone"
            android:searchHintIcon="@null"
            app:queryHint="@string/hint_search_group"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/shape_searchview"
            android:layout_toRightOf="@id/mImgButtonBack"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v7.widget.SearchView>

    </RelativeLayout>

</LinearLayout>
